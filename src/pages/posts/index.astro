---

import '../../styles/global.css';
import BaseLayout from '../../layouts/BlogsLayout.astro'
import BlogPost from '../../components/Blogpost.astro';
const allPosts = Object.values(import.meta.glob('./*.md', { eager: true }));
const pageTitle = "My Blogs";

---
<BaseLayout pageTitle={pageTitle}>
	<p>This is where I will post about my journey of becoming a developer!</p>
	<div class="flex flex-wrap max-w-[1300px]">
		{allPosts.map((post: any) => <BlogPost url={post.url} title={post.frontmatter.title} />)}	
	</div>
</BaseLayout>